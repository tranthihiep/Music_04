<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/txtNameRowSong"
        android:layout_width="@dimen/sp_250"
        android:layout_height="@dimen/sp_50"
        android:layout_weight="1"
        android:textSize="@dimen/sp_20"
        />
    <ImageView
        android:id="@+id/btnAddRowSong"
        android:layout_width="@dimen/sp_50"
        android:layout_height="@dimen/sp_50"
        android:layout_weight="1"
        android:contentDescription="@string/description"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/add"
        />
    <ImageView
        android:id="@+id/btnFavRowSong"
        android:layout_width="@dimen/sp_50"
        android:layout_height="@dimen/sp_50"
        android:layout_weight="1"
        android:contentDescription="@string/description"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/favorite"
        />
    <ImageView
        android:id="@+id/btndelRowSong"
        android:layout_width="@dimen/sp_50"
        android:layout_height="@dimen/sp_50"
        android:layout_weight="1"
        android:contentDescription="@string/description"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/delete"
        />
</LinearLayout>
